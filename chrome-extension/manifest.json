{
  "manifest_version": 3,
  "name": "English Vocabulary",
  "description": "Add selected vocabulary to Google Sheets",
  "version": "1.0",
  "permissions": [
    "activeTab",
    "identity",
    "identity.email",
    "scripting"
  ],
  "host_permissions": [
    "https://www.googleapis.com/*"
  ],
  "oauth2": {
    "client_id": "862535538626-667vo20kv9nf03r7s24dh0hus0k77dmi.apps.googleusercontent.com",
    "scopes": [
      "https://www.googleapis.com/auth/spreadsheets"
    ]
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["*://eikaiwa.dmm.com/app/daily-news/*"],
      "js": ["content.js"]
    }
  ],
  "action": {
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}